@{
    Layout = null; // Remove this if you're using a layout page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Profile - Enrollment System</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.min.css")">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        .content-section {
            padding: 30px;
            flex-grow: 1;
        }
        .profile-info p {
            margin-bottom: 8px;
        }
        .profile-info strong {
            display: inline-block;
            width: 140px;
        }
        .card-header-profile {
            background-color: #007bff;
            color: white;
            font-size: 1.25rem;
            font-weight: 600;
        }
    </style>
</head>
<body>
@Html.Partial("_MainHeader") <!-- Replace with your actual header partial view -->

<div class="container content-section">
    <h1 class="mb-4">Your Student Profile</h1>
    <p class="lead">Here are your registered details.</p>

    <div class="card mt-4">
        <div class="card-header card-header-profile">
            Student ID: @Model.Stud_Code
        </div>
        <div class="card-body profile-info">
            <p><strong>Name:</strong> @Model.Stud_Fname @(Model.Stud_Mname ?? "") @Model.Stud_Lname</p>

            <hr>
            <p><strong>Date of Birth:</strong> @Model.Stud_Dob.ToString("MMMM dd, yyyy")</p>

            <p><strong>Contact Number:</strong> @Model.Stud_Contact</p>

            <p><strong>Email Address:</strong> @Model.Stud_Email</p>

            <hr>
            <p><strong>Address:</strong> @Model.Stud_Address</p>

        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Navigation active link logic
        const currentPath = window.location.pathname;
        const currentPage = currentPath.substring(currentPath.lastIndexOf('/') + 1);

        const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
        navLinks.forEach(link => {
            const linkHref = link.getAttribute('href');
            const linkPage = linkHref.substring(linkHref.lastIndexOf('/') + 1);

            if (linkPage.toLowerCase() === currentPage.toLowerCase()) {
                link.classList.add('active');
                link.setAttribute('aria-current', 'page');
            } else {
                link.classList.remove('active');
                link.removeAttribute('aria-current');
            }
        });
    });
</script>
</body>
</html>