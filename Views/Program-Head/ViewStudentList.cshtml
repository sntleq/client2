                    <td>3rd Year</td>
                    <td><span class="status-regular">Regular</span></td>
                    <td>
                        <a href="@Url.Action("Details", "Student", new { id = "2023-001" })" class="btn btn-info btn-sm btn-view">View</a>
                    </td>
                </tr>
