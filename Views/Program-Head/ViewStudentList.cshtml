                    <td>
                        <a href="@Url.Action("Details", "Student", new { id = "2023-002" })" class="btn btn-info btn-sm btn-view">View</a>
                    </td>
                </tr>
                <tr>
                    <td>2023-003</td>
                    <td>Pedro Reyes</td>
                    <td>BSIS</td>
                    <td>4th Year</td>
                    <td><span class="status-irregular">Irregular</span></td>
                    <td>
                        <a href="@Url.Action("Details", "Student", new { id = "2023-003" })" class="btn btn-info btn-sm btn-view">View</a>
                    </td>
                </tr>
                <tr>
                    <td>2023-004</td>
                    <td>Ana Lopez</td>
                    <td>BSIT</td>
                    <td>1st Year</td>
                    <td><span class="status-regular">Regular</span></td>
                    <td>
                        <a href="@Url.Action("Details", "Student", new { id = "2023-004" })" class="btn btn-info btn-sm btn-view">View</a>
                    </td>
                </tr>
                <tr>
                    <td>2023-005</td>
                    <td>Luis Garcia</td>
                    <td>BSCS</td>
                    <td>3rd Year</td>
